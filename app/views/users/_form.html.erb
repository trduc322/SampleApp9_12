<%= form_for (@user)  do |f|  %>
    <%= render "layouts/error_messages" %>
    <%=f.label :name %>
    <%=f.text_field :name %>
    
    <%=f.label :email %>
    <%=f.email_field :email %>
    
    <%=f.label :password %>
    <%=f.password_field :password %>
    
    <%=f.label :password_conformation %>
    <%=f.password_field :password_conformation %>
    
    <%= f.submit title_submit, class:"btn  btn-primary" %>
    <%end%>